        UltraSlider:
            val: root.val
            buttons: [[100,0,"no multiplier",None]]
            val_min: 10
            val_max: 500
            unit: "%"
            round_to: 0
            id: slider
            pos_hint: {'center_x': 0.5, 'y': 0.6}
