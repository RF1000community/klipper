            id: btn_cancel
            width: root.width/2
            pos: root.pos
            on_release: root.dismiss()
        BtnPConfirm:
            enabled: slider.changed
            width: root.width/2
            pos: root.center_x, root.y
            on_release: app.reactor.cb(printer_cmd.send_speed, slider.val), root.dismiss()

<FlowPopup@BasePopup>:
    size_hint: 0.94, 0.4
    title: "Material Flow"
    FloatLayout:
        UltraSlider:
            val: root.val
            buttons: [[100,0,"no multiplier",None]]
            val_min: 90
            val_max: 110
            unit: "%"
            round_to: 1
            round_style: 5
            id: slider
            pos_hint: {'center_x': 0.5, 'y': 0.6}
        BtnPCancel:
            id: btn_cancel
            width: root.width/2
            pos: root.pos
            on_release: root.dismiss()
        BtnPConfirm:
            enabled: slider.changed
            width: root.width/2
            pos: root.center_x, root.y
            on_release: app.reactor.cb(printer_cmd.send_flow, slider.val), root.dismiss()

<FanPopup@BasePopup>:
    size_hint: 0.94, 0.4
    title: "Part Cooling"
    FloatLayout:
        UltraSlider:
            val: root.val
            buttons: [[0,0,"Off",None]]
            val_min: 0
            val_max: 100
            unit: "%"
            round_to: 0
            id: slider
            pos_hint: {'center_x': 0.5, 'y': 0.6}
